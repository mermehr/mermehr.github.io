	<script async reload src="https://www.googletagmanager.com/gtag/js?id=<%- theme.analytics.google.id %>"></script>
	<script async reload>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());
		gtag('config','<%- theme.analytics.google.id %>');
	</script>
<% } %>