<% if (theme.analytics.baidu.enable && theme.analytics.baidu.hm){ %>
	<script async reload>
			var _hmt = _hmt || [];
			(function () {
				var hm = document.createElement("script");
				hm.src = "https://hm.baidu.com/hm.js?<%= theme.analytics.baidu.hm %>";
				var s = document.getElementsByTagName("script")[0];
				s.parentNode.insertBefore(hm, s);
			})();
	</script>
<% } %>

